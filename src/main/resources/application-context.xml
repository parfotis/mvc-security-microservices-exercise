<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="car"
          class="com.learning.ote.spring.core.vehicle.Car">
    </bean>

    <bean id="bike"
          class="com.learning.ote.spring.core.vehicle.Bike">
    </bean>

    <bean id="travel"
          class="com.learning.ote.spring.core.Travel">
        <constructor-arg index="0" ref="bike"></constructor-arg>
        <constructor-arg index="1" ref="laneAssistService"></constructor-arg>
    </bean>

    <!--Define your beans here -->
    <beans profile="en">
        <bean id="laneAssistService"
              class="com.learning.ote.spring.core.services.GreatBritainLaneAssistServiceImpl">
        </bean>
    </beans>

    <beans profile="gr">
        <bean id="laneAssistService"
              class="com.learning.ote.spring.core.services.GreeceLaneAssistServiceImpl">
        </bean>
    </beans>


</beans>